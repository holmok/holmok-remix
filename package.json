{
  "name": "holmok-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "dependencies": {
    "@fastify/compress": "^7.0.3",
    "@fastify/helmet": "^11.1.1",
    "@fastify/middie": "^8.3.1",
    "@fastify/static": "^7.0.4",
    "@mcansh/remix-fastify": "3.4.0",
    "@remix-run/node": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@types/node": "^22.5.1",
    "cross-env": "^7.0.3",
    "fastify": "^4.28.1",
    "pino": "^9.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.11.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/source-map-support": "^0.5.10",
    "esbuild": "^0.23.1",
    "pino-pretty": "^11.2.2",
    "ts-standard": "^12.0.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "engines": {
    "node": ">=20.11.1"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf public/build && rm -rf build",
    "compile:server": "tsc --project ./tsconfig.server.json",
    "compile:remix": "remix vite:build",
    "build": "yarn lint && yarn clean &&  yarn compile:server && yarn compile:remix",
    "dev": "cross-env NODE_ENV=development tsx --env-file=./.env.local --watch-path ./server/index.ts --watch-path ./public/css ./server/index.ts  | pino-pretty",
    "lint:app": "ts-standard --project ./tsconfig.json ./app",
    "lint:server": "ts-standard --project ./tsconfig.server.json ./server",
    "lint": "yarn lint:app && yarn lint:server",
    "start:local": "cross-env NODE_ENV=production node --env-file=./.env.local ./dist/index.js | pino-pretty",
    "typecheck": "tsc"
  }
}
